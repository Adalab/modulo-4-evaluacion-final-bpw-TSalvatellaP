                }
              }
            }
          }
        },
        "post": {
          "summary": "Crea un nuevo doctor.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DoctorInput"
